---
const { type = "note" } = Astro.props;
---

<div class={`callout callout-${type}`}>
  <slot />
</div>

<style>
.callout {
  margin: 2.5rem 0;
  padding: 1.25rem 1.5rem;
  border-left: 4px solid var(--muted);
  background: rgba(255, 255, 255, 0.04);
  font-size: 0.95rem;
  color: var(--muted);
}

.callout-aside {
  border-color: var(--accent);
  color: var(--fg);
}
</style>
